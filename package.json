{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for Book Review Platform",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node backend/src/server.ts",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "start": "nodemon --exec ts-node backend/src/server.ts"
  },
  "keywords": [
    "books",
    "reviews",
    "api",
    "node",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.2",
    "jest": "^29.6.4",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "nodemonConfig": {
    "exec": "ts-node src/server.ts",
    "watch": [
      "src"
    ],
    "ext": "ts"
